<aura:component access="global">
	<aura:attribute name="isModalOpen" type="Boolean" default="false"/>
    <aura:attribute name="flowName" type="String"/>
    <aura:attribute name="popupHeader" type="String"/>
    <aura:attribute name="scope" type="String"/>
    <aura:attribute name="masterRecordId" type="String" default=""/>
    <aura:attribute name="tryToOpenNewRecord" type="Boolean" default="true"/>
    <aura:attribute name="sendRecordTypeIdToFlow" type="Boolean" default="false"/>
    <aura:attribute name="inputVariables" type="Object[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}" />

    <aura:if isTrue="{!v.isModalOpen}">
        <div style="height: 640px;">
            <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container" style="max-width:60%;min-width:60%;width:60%;">
                    <header class="slds-modal__header">
                        <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate" tabindex="-1">{!v.popupHeader}</h1>
                        <lightning:buttonIcon iconName="utility:close" class="slds-button slds-button_icon slds-modal__close" onclick="{!c.closeFlowModal}"/>
                    </header>
                    <div class="slds-modal__content slds-var-p-right_medium slds-var-p-bottom_medium slds-var-p-left_medium">
                        <lightning:flow aura:id="flowElement" onstatuschange="{!c.closeModalOnFinish}" />
                    </div>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
    </aura:if>
</aura:component>